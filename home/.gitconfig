[user]
	name = Emanuel Duss
	email = emanuel.duss@gmail.com
[core]
	autocrlf = input
	safecrlf = true
	editor = vim
[alias]
	hist = log --pretty=format:\"%h %ad [%an] | %s%d \" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
[merge]
	tool = vimdiff
[color]
	ui = true
	status = auto
	branch = auto
	interactive = auto
	diff = auto
[push]
	default = matching

